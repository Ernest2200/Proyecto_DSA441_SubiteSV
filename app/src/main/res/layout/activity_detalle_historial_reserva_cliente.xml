<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".actividades.cliente.DetalleHistorialReservaClienteActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <io.github.florent37.shapeofview.shapes.ArcView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="4dp"
            app:shape_arc_height="20dp"
            app:shape_arc_position="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txtViewNombreDetallesReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del conductor"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="30dp"/>


        </io.github.florent37.shapeofview.shapes.ArcView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_location_on"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/txtViewOrigenHistorialDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Calle Falsa y av Falsa"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_map"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtViewDestinoHistorialDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Calle Falsa y av Falsa"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_star"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/txtViewCalificacionHistorialDetalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Tu Calificacion: 0"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="16sp"/>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenCicularDetalleHistorial"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/detallehistorial"
        android:layout_gravity="center|top"
        app:civ_border_width="5dp"
        app:civ_border_color="#f0f0f0"
        android:layout_marginTop="120dp"/>

    <RatingBar
        android:id="@+id/ratingBarHistorialReservaDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:numStars="5"
        android:isIndicator="true"
        android:layout_margin="30dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenCicularAtras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_back2"
        android:layout_gravity="left|top"
        app:civ_circle_background_color="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>